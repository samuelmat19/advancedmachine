<?xml version="1.0" encoding="utf-8"?>
<extension version="3.5" type="plugin" group="virtualcurrencypayment" method="upgrade">
    <name>PLG_VIRTUALCURRENCYPAYMENT_PAYMENTGATEWAY</name>
    <author>Todor Iliev</author>
    <copyright>Copyright (C) 2016 Todor Iliev ( ITPrism.com ). All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.en.html GNU/GPLv3</license>
    <authorEmail>todor@itprism.com</authorEmail>
    <authorUrl>http://itprism.com</authorUrl>
    <version>2.1</version>
    <creationDate>11 May, 2016</creationDate>
    <description><![CDATA[
    <p>VirtualCurrency Payment - Payment Gateway is a plugin that enables payments via user accounts that contains virtual currency.</p>
    <p><a href='http://itprism.com/help/111-virtual-currency-documentation' target='_blank'>Read documentation</a> that will help you to setup the extensions.</p>
    <p><a href="http://itprism.com/" target="_blank">Subscribe for the newsletter</a> to receive information about updates and new ITPrism extensions.</p>
    <p>Please, <a href="http://extensions.joomla.org/extensions/extension/e-commerce/credits-a-point-systems/virtual-currency" target="_blank">vote for the extension</a> on Joomla! Extensions Directory</p>
    ]]></description>

    <files>
        <filename plugin="paymentgateway">paymentgateway.php</filename>
        <folder>images</folder>
        <folder>language</folder>
    </files>

    <help url="PLG_VIRTUALCURRENCYPAYMENT_PAYMENTGATEWAY_HELP_URL"/>

    <config>
        <fields name="params" addfieldpath="/administrator/components/com_virtualcurrency/models/fields">
            <fieldset name="basic">
                <field name="return_url" type="text" label="PLG_VIRTUALCURRENCYPAYMENT_PAYMENTGATEWAY_RETURN_URL" description="PLG_VIRTUALCURRENCYPAYMENT_PAYMENTGATEWAY_RETURN_URL_DESC" class="input-xxlarge" />
                <field name="cancel_url" type="text" label="PLG_VIRTUALCURRENCYPAYMENT_PAYMENTGATEWAY_CANCEL_URL" description="PLG_VIRTUALCURRENCYPAYMENT_PAYMENTGATEWAY_CANCEL_URL_DESC" class="input-xxlarge" />
            </fieldset>

            <fieldset name="sandbox" label="PLG_VIRTUALCURRENCYPAYMENT_PAYMENTGATEWAY_SANDBOX">
                <field name="sandbox" type="radio" default="1" label="PLG_VIRTUALCURRENCYPAYMENT_PAYMENTGATEWAY_ENABLE_SANDBOX" description="PLG_VIRTUALCURRENCYPAYMENT_PAYMENTGATEWAY_SANDBOX_DESC" class="btn-group">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>

            <fieldset name="emails" label="PLG_VIRTUALCURRENCYPAYMENT_PAYMENTGATEWAY_NOTIFICATION_EMAILS" description="PLG_VIRTUALCURRENCYPAYMENT_PAYMENTGATEWAY_NOTIFICATION_EMAILS_DESC" addfieldpath="/administrator/components/com_emailtemplates/models/fields">
                <field name="admin_mail_id" type="emailtemplate" default="0" label="PLG_VIRTUALCURRENCYPAYMENT_PAYMENTGATEWAY_SEND_MAIL_ADMIN" description="PLG_VIRTUALCURRENCYPAYMENT_PAYMENTGATEWAY_SEND_MAIL_ADMIN_DESC" class="btn-group" />
                <field name="user_mail_id" type="emailtemplate" default="0" label="PLG_VIRTUALCURRENCYPAYMENT_PAYMENTGATEWAY_SEND_MAIL_USER" description="PLG_VIRTUALCURRENCYPAYMENT_PAYMENTGATEWAY_SEND_MAIL_USER_DESC" class="btn-group" />

                <field name="email_mode" type="list" default="html" label="PLG_VIRTUALCURRENCYPAYMENT_PAYMENTGATEWAY_EMAIL_MODE" description="PLG_VIRTUALCURRENCYPAYMENT_PAYMENTGATEWAY_EMAIL_MODE_DESC" >
                    <option value="plain">PLG_VIRTUALCURRENCYPAYMENT_PAYMENTGATEWAY_PLAIN</option>
                    <option value="html">PLG_VIRTUALCURRENCYPAYMENT_PAYMENTGATEWAY_HTML</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>