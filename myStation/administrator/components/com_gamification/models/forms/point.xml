<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>

        <field name="title" type="text" class="input-xxlarge"
               label="COM_GAMIFICATION_TITLE"
               description="COM_GAMIFICATION_TITLE_DESC"
               filter="trim"
               required="true"/>

        <field name="abbr" type="text"
               label="COM_GAMIFICATION_ABBREVIATION"
               description="COM_GAMIFICATION_ABBREVIATION_DESC"
               filter="trim"
                />

        <field name="group_id" type="gfygroups"
               label="COM_GAMIFICATION_GROUP"
               description="COM_GAMIFICATION_GROUP_DESC"
               size="1"
               filter="intval"
               required="true"
                />

        <field name="published" type="list"
               label="JSTATUS"
               description="JFIELD_PUBLISHED_DESC"
               size="1"
               filter="intval"
               default="1"
                >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>

        <field name="note" type="textarea" class="input-xxlarge"
               label="COM_GAMIFICATION_NOTE"
               description="COM_GAMIFICATION_FIELD_NOTE_DESC"
               filter="trim"
                />

        <field name="id" type="text" class="readonly"
               label="JGLOBAL_FIELD_ID_LABEL"
               description="JGLOBAL_FIELD_ID_DESC"
               readonly="true"
               default="0"
                />

    </fieldset>
</form>